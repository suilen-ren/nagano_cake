<div class ="container p-5">
  <div class ="row">
    <div class ="col-10 offset-1">
      <h4 class ="ml-3 mb-3"><mark><%= @customer.name %>さんの会員情報編集</mark></h4>
      <div class ="form-group">
        <%= form_with model: @customer ,url: "/admin/customers/#{@customer.id}" do |f| %>
          <table class ="table table-borderless mt-3">
              <tr>
                <th>会員ID</th>
                <td><%= @customer.id %></td>
              </tr>
              <tr>
                <th>氏名</th>
                <td><%= f.text_field :last_name ,class: "form-control"%></td>
                <td><%= f.text_field :first_name , class: "form-control"%></td>
              </tr>
              <tr>
                <th>フリガナ</th>
                <td><%= f.text_field :last_name_kana,class: "form-control" %></td>
                <td><%= f.text_field :first_name_kana ,class: "form-control"%></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td colspan = "2"><%= f.text_field :telephone_number ,class: "form-control w-50"%></td>
              </tr>
              <tr>
                <th>住所</th>
                <td colspan = "2"><%= f.text_field :address ,class: "form-control"%></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td colspan= "2"><%= f.text_field :telephone_number,class: "form-control w-50" %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td colspan = "2"><%= f.text_field :email ,class: "form-control w-50"%></td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <td colspan = "2">
                  <div class ="form-check form-check-inline ">
                    <%= f.radio_button :is_active, true, class: "form-check-input" %><%= f.label "有効", class: "form-check-label mr-2"%>
                    <%= f.radio_button :is_active, false ,class: "form-check-input"%> <%=f.label "退会", class: "form-check-label "%>
                  </div>
                </td>
              </tr>
          </table>
          <div class ="text-center">
            <%= f.submit "変更を保存" ,class: "btn btn-success px-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

