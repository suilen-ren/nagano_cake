<div class ="container p-5">
  <div class ="row">
    <div class ="col-10 offset-1">
      <h4 class ="ml-3 mb-3"><mark>ジャンル名編集</mark></h4>
      <div class ="form-group pt-5">
        <%= form_with model: @genre ,url: "/admin/genres/#{@genre.id}" do |f|%>
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name , class: "form-control w-25 d-inline-block"%>
          <%= f.submit "変更を保存",class: "btn btn-success px-5 d-inline-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
