<div class ="container p-5">
  <div class ="row">
    <div class ="col-10 offset-1">
      <h4 class ="ml-3 mb-3"><mark>ジャンル一覧・追加</mark></h4>
      <div class ="form-group">
        <%= form_with model: @genre, url: "/admin/genres" do |f|%>
          <label for = "genre_name"><strong>ジャンル名</strong></label>
          <%= f.text_field :name ,class: "form-control w-25 d-inline-block ml-4"%>
          <%= f.submit "新規登録" ,class: "btn btn-success px-3 d-inline-block ml-4"  %>
        <% end %>

        <table class ="table w-50 mt-5">
          <thead class ="thead-light">
            <th>ジャンル</th>
            <th></th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-success"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
