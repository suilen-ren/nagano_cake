<h3>ジャンル追加</h3>
<%= form_with model: @genre, url: "/admin/genres" do |f|%>
  <label for = "genre_name">ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>



<h3>ジャンル一覧</h3>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan ="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>