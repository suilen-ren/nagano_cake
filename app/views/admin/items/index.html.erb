<div class ="container p-5">
  <div class ="row">
    <div class="col-10">
      <h4 class ="ml-3 mb-5 d-inline-block"><mark>商品一覧</mark></h4>
      <div class ="d-inline-block text-right">
        <%= link_to "＋" ,new_admin_item_path ,class: "btn btn-outline-secondary rounded-circle"%>
      </div>
      <table class ="table">
        <thead class ="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item|%>
            <tr>
              <td><%= item.id  %></td>
              <td><%= link_to item.name, admin_item_path(item.id)%></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  <p class ="text-success">販売中</p>
                <% else %>
                  <p class ="text-secondary">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>








