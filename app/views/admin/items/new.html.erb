<% if @item.errors.any? %>
  <h3><%= @item.errors.count %>個のエラーが発生しました</h3>
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<h3>商品新規登録</h3>

<%= form_with model: @item ,url: "/admin/items" do |f| %>
  <label for "item_photo_item">商品画像</label>
  <%= f.file_field :photo_item %> </br>
  <label for = "item_name">商品名</label>
  <%= f.text_field :name %> </br>
  <label for = "item_introduction">商品紹介</label>
  <%= f.text_area :introduction %> </br>
  <label for = "item_genre_id">ジャンル</label>
  <%= f.collection_select :genre_id , Genre.all,:id,:name,include_blank: "選択してください" %> </br>
  <label for = "item_price">税抜価格</label>
  <%= f.text_field :price %> </br>
  <label for = "item_is_active">販売ステータス</label>
  <%= f.radio_button :is_active ,true %>販売中 <%= f.radio_button :is_active, false%>販売停止中</br>

  <%= f.submit  "新規登録"%>
<% end %>