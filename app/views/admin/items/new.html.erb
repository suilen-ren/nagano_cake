<div class ="container p-5">
  <div class ="row">
    <div class ="col-10 offset-1">
      <h4 class ="ml-3 mb-3"><mark>商品新規登録</mark></h4>
        <%= form_with model: @item ,url: "/admin/items" do |f| %>
          <table class ="table table-borderless w-75">
            <tr>
              <th><strong>商品画像</strong></th>
              <td>
                <div class ="form-group">
                  <%= f.file_field :photo_item ,class: "form-control-file" %>
                </div>
              </td>
            </tr>
            <tr>
              <th><strong>商品名</strong></th>
              <td>
                <div class ="form-group">
                  <%= f.text_field :name ,class: "form-control"%>
                </div>
              </td>
            </tr>
            <tr>
              <th><strong>商品紹介</strong></th>
              <td>
                <div class ="form-group">
                  <%= f.text_area :introduction ,class: "form-control"%>
                </div>
                </td>
            </tr>
            <tr>
              <th><strong>ジャンル</strong></th>
              <td>
                <div class ="form-group">
                  <%= f.collection_select :genre_id , Genre.all,:id,:name,include_blank: "選択してください",class: "form-control" %>
                </div>
            </tr>
            <tr>
              <th><strong>税抜価格(円)</strong></th>
              <td>
                <div class ="form-group">
                  <%= f.text_field :price,class: "form-control",include_blank: "円" %>
                </div>
              </td>
            </tr>
            <tr>
              <th><strong>販売ステータス</strong></th>
              <td>
                <div class ="form-check form-check-inline">
                  <%= f.radio_button :is_active ,true ,class: "form-check-input" %>
                  <%= f.label "販売中", class: "form-check-label"%>
                  <%= f.radio_button :is_active, false ,class: "form-check-input" %>
                  <%= f.label "販売停止中" ,class: "form-check-label"%>
                </div>
              </td>
            </tr>
          </table>
          <div class ="text-center">
            <%= f.submit  "新規登録", class: "btn btn-success px-4"%>
          </div>
        <% end %>
    </div>
  </div>
</div>


