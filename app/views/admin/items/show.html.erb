<%= flash[:notice] %>

<h3>商品詳細画面</h3>


<%= image_tag @item.photo_item %>

<table>
  <thead>
    <tr>
      <th colspan = "2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name%></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格</br>(税抜価格)</td>
      <td><%= @price_with_tax %>円 (<%= @item.price %>円)</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する" , edit_admin_item_path(@item.id) %>