<h3>配送先編集</h3>

<%= form_with model: @address, url: "/addresses/#{@address.id}" do |f|%>
  <table>
    <tr>
      <th>郵便番号(ハイフン無し)</th>
      <td><%= f.text_field :postal_code %></td>
      <td colspan ="2"></td>
    </tr>
    <tr>
      <th>住所</th>
      <td colspan="2"><%= f.text_field :address %></td>
      <td></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= f.text_field :name %></td>
      <td></td>
      <td><%= f.submit "変更を保存" %></td>
    </tr>
  </table>

<% end %>
