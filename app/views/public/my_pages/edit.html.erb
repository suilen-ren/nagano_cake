<h3>会員情報編集</h3>
<%= form_with model: @customer ,url: "/my_page" do |f| %>
  <table>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td colspan ="2"><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
      <td></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>

  <%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to "退会する" , confirm_my_pages_path %>