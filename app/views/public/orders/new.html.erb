<div class = "container p-5">
  <div class ="row">
    <div class = "col-10">
      <h3 class ="p-3">注文情報入力</h3>
      <%= form_with model: @order ,url: "/orders/confirm" do |f| %>
        <div class = "payment p-3">
          <h3>支払い方法</h3>
          <%= f.radio_button :payment , Order.payments.key(0) %>
          <%= f.label :payment ,"クレジットカード"%> </br>

          <%= f.radio_button :payment ,Order.payments.key(1) %>
          <%= f.label :payment, "銀行振込" %>

          <h3>お届け先</h3>
          <%= f.radio_button :select_address, 1%>
          <%= f.label "ご自身の住所"%> </br>

          <%= f.radio_button :select_address, 2 %>
          <%= f.label "登録済住所から選択" %></br>

          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :display_address) ,class: "ml-1"%> </br>

          <%= f.radio_button :select_address, 3 %>
          <%= f.label "新しいお届け先" %></br>

          <table>
            <tr>
              <th>郵便番号(ハイフン無し)</th>
              <td><%= f.text_field :ship_postal_code %></td>
              <td></td>
            </tr>
            <tr>
              <th>住所</th>
              <td colspan="2"><%= f.text_field :ship_address %></td>
            </tr>
            <tr>
              <th>宛名</th>
              <td><%= f.text_field :ship_name %></td>
            </tr>
          </table>
        </div>
        <%= f.submit "確認画面へ進む" %>
      <% end %>

    </div>
  </div>
</div>