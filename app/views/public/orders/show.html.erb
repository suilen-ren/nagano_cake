<div class ="container p-5">
  <div class = "row" >
    <div class = "col-10">
      <h3 class ="pl-5">注文履歴詳細</h3>
      <div class ="w-50 ml-auto d-inline-block">
        <p class ="strong">注文情報</p>
        <table class ="table table-bordered w-auto " >
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.ship_postal_code %></br>
              <%= @order.ship_address %>
              <%= @order.ship_name %>
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>

          </tr>
        </table>
      </div>

      <div class ="w-25 pl-1 d-inline-block">
        <p class ="strong">請求情報</p>
        <table class ="table table-bordered w-auto">
          <tr>
            <th>商品合計</th>
            <td><%= @order.amount %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_price %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class ="row">
    <div class ="col-10">
      <p class= "strong">注文内容</p>
      <table class ="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= Item.find(order_item.item_id).name %></td>
              <td><%= order_item.price_with_tax %></td>
              <td><%= order_item.quantity %></td>
              <td><%= order_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>