<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <thead>
      <tr>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>名前</td>
        <td>(姓)</td>
        <td>
          <%= f.text_field :last_name %>
        </td>
        <td>(名)</td>
        <td>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>(セイ)</td>
        <td>
          <%= f.text_field :last_name_kana %>
        </td>
        <td>(メイ)</td>
        <td>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフン無し)</td>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td colspan="3"><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td></td>
        <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>

    <%= f.submit "Sign up" %>

<% end %>
<h3>既に登録済みの方</h3>
<%= link_to "こちら",new_customer_session_path %>よりログイン下しあ。
